<odoo>
    <data>
        <record id="sge_libreria.libro_tree" model="ir.ui.view">
            <field name="name">sge_libreria.libro.tree</field>
            <field name="model">sge_libreria.libro</field>
            <field name="arch" type="xml">
                <tree string="Libros">
                            <field name="name"/>
                            <field name="precio"/>
                            <field name="ejemplares"/>
                            <field name="fecha_compra"/>
                            <field name="segmano"/>
                            <field name="estado"/>
                </tree>
            </field>
        </record>

        <record id="sge_libreria.libro_form" model="ir.ui.view">
            <field name="name">sge_libreria.libro.form</field>
            <field name="model">sge_libreria.libro</field>
            <field name="arch" type="xml">
                <form string="Libro">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="precio" />
                            <field name="ejemplares" />
                            <field name="fecha_compra" />
                            <field name="segmano" />
                            <field name="estado" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

</odoo>