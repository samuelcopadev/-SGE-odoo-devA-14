            <field name="users_id" ref="user_carlos"/>
            <field name="priority">1</field>
            <field name="state">draft</field> <field name="tag_ids" eval="[(4, ref('tag_redes'))]"/>
            <field name="description">Solicitud para configurar VPN para teletrabajo.</field>
        </record>

        <record id="issue_6" model="scf_incidencias.issues">
            <field name="name">Cambiar Tóner Cyan</field>
            <field name="activo_id" ref="asset_prt_rrhh"/>
            <field name="priority">0</field>
            <field name="state">draft</field>
            <field name="tag_ids" eval="[(4, ref('tag_impresion'))]"/>
