            <field name="email">luis@demo.com</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="tag_urgente" model="scf_incidencias.etiquetas">
            <field name="name">Urgente </field>
            <field name="color">1</field> </record>
        <record id="tag_redes" model="scf_incidencias.etiquetas">
            <field name="name">Redes </field>
            <field name="color">2</field> </record>
        <record id="tag_hw" model="scf_incidencias.etiquetas">
            <field name="name">Hardware </field>
            <field name="color">4</field> </record>
        <record id="tag_sw" model="scf_incidencias.etiquetas">
            <field name="name">Software </field>
            <field name="color">10</field> </record>
        <record id="tag_impresion" model="scf_incidencias.etiquetas">
            <field name="name">Impresión </field>
            <field name="color">6</field> </record>

        <record id="asset_srv_main" model="scf_incidencias.activos">
            <field name="name">Servidor Principal DC01</field>
            <field name="model">Dell PowerEdge R750</field>
            <field name="serial_no">SRV-DC-001</field>
            <field name="category">network</field>
            <field name="purchase_date">2020-05-15</field>
        </record>

        <record id="asset_router_core" model="scf_incidencias.activos">
            <field name="name">Router Fibra Principal</field>
            <field name="model">Cisco ISR 4000</field>
            <field name="serial_no">NET-CS-4000</field>
            <field name="category">network</field>
            <field name="purchase_date">2021-08-20</field>
        </record>

        <record id="asset_pc_ceo" model="scf_incidencias.activos">
            <field name="name">Portátil CEO</field>
            <field name="model">MacBook Pro M3</field>
            <field name="serial_no">MAC-CEO-99</field>
            <field name="category">pc</field>
            <field name="purchase_date">2024-01-10</field>
        </record>

        <record id="asset_pc_rec" model="scf_incidencias.activos">
            <field name="name">PC Recepción</field>
            <field name="model">HP EliteDesk 800</field>
            <field name="serial_no">HP-REC-01</field>
            <field name="category">pc</field>
            <field name="purchase_date">2019-03-12</field>
