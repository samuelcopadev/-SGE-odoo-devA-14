<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="user_ana" model="res.users">
            <field name="name">Ana Técnico</field>
            <field name="login">ana_t</field>
            <field name="email">ana@demo.com</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="user_carlos" model="res.users">
            <field name="name">Carlos Redes</field>
            <field name="login">carlos_r</field>
            <field name="email">carlos@demo.com</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="user_luis" model="res.users">
            <field name="name">Luis Hardware</field>
