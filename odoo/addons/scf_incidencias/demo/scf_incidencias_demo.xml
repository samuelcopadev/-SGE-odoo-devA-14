        </record>

        <record id="issue_excel_crash" model="scf_incidencias.issues">
            <field name="name">Excel se cierra al abrir nóminas</field>
            <field name="priority">1</field>
            <field name="state">process</field>
            <field name="activo_id" ref="asset_pc_rrhh"/>
