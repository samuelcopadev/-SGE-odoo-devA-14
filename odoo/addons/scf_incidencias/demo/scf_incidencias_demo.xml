        <record id="issue_server_down" model="scf_incidencias.issues">
            <field name="name">URGENTE: Caída del Servidor de Ficheros</field>
            <field name="priority">2</field>
            <field name="state">done</field>
            <field name="activo_id" ref="asset_servidor"/>
            <field name="users_id" ref="user_ana"/>
            <field name="tag_ids" eval="[(4, ref('tag_critico')), (4, ref('tag_redes'))]"/>
            <field name="description">Nadie puede acceder a la carpeta compartida.</field>
        </record>

        <record id="issue_nas_full" model="scf_incidencias.issues">
            <field name="name">Alerta de Espacio en Disco NAS</field>
            <field name="priority">1</field>
            <field name="state">process</field>
            <field name="activo_id" ref="asset_nas"/>
            <field name="users_id" ref="user_ana"/>
            <field name="tag_ids" eval="[(4, ref('tag_hardware'))]"/>
            <field name="description">Queda menos del 5% de espacio libre.</field>
        </record>

        <record id="issue_zebra_broken" model="scf_incidencias.issues">
            <field name="name">Pistola 1 no lee códigos QR</field>
            <field name="priority">1</field>
            <field name="state">draft</field>
            <field name="activo_id" ref="asset_zebra_1"/>
