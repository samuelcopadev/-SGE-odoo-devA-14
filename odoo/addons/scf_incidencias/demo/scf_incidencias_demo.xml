            <field name="priority">2</field> <field name="state">process</field>
            <field name="tag_ids" eval="[(4, ref('tag_sw')), (4, ref('tag_urgente'))]"/>
            <field name="description">El CEO se queja de lentitud al abrir hojas de cálculo grandes.</field>
            <field name="intervencion_ids" eval="[
                (0, 0, {'name': 'Actualización de Office', 'user_id': ref('user_ana'), 'time_spent': 1.0}),
                (0, 0, {'name': 'Limpieza de caché', 'user_id': ref('user_ana'), 'time_spent': 0.5})
            ]"/>
        </record>

        <record id="issue_4" model="scf_incidencias.issues">
            <field name="name">PC Recepción pantallazo azul</field>
