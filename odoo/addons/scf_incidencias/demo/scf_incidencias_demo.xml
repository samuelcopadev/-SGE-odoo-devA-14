        <record id="asset_prt_hall" model="scf_incidencias.activos">
            <field name="name">Impresora Hall</field>
            <field name="model">Kyocera Ecosys</field>
            <field name="serial_no">KYO-PRT-55</field>
            <field name="category">printer</field>
            <field name="purchase_date">2022-11-05</field>
        </record>

        <record id="asset_prt_rrhh" model="scf_incidencias.activos">
            <field name="name">Impresora RRHH</field>
            <field name="model">Brother MFC-L8690</field>
            <field name="serial_no">BRO-RH-22</field>
            <field name="category">printer</field>
            <field name="purchase_date">2023-02-28</field>
        </record>

        <record id="issue_1" model="scf_incidencias.issues">
            <field name="name">CRÍTICO: Caída del Servidor DC01</field>
            <field name="activo_id" ref="asset_srv_main"/>
            <field name="users_id" ref="user_carlos"/>
            <field name="priority">2</field> <field name="state">done</field> <field name="tag_ids" eval="[(4, ref('tag_urgente')), (4, ref('tag_redes'))]"/>
            <field name="description">El servidor dejó de responder ping a las 03:00 AM.</field>
            <field name="intervencion_ids" eval="[
                (0, 0, {'name': 'Reinicio forzoso', 'user_id': ref('user_carlos'), 'time_spent': 1.0}),
                (0, 0, {'name': 'Restauración RAID', 'user_id': ref('user_carlos'), 'time_spent': 4.0})
            ]"/>
        </record>

        <record id="issue_2" model="scf_incidencias.issues">
            <field name="name">Papel atascado bandeja 2</field>
            <field name="activo_id" ref="asset_prt_hall"/>
            <field name="users_id" ref="user_luis"/>
            <field name="priority">1</field>
            <field name="state">done</field>
            <field name="tag_ids" eval="[(4, ref('tag_impresion'))]"/>
            <field name="intervencion_ids" eval="[
                (0, 0, {'name': 'Retirada de papel y limpieza rodillos', 'user_id': ref('user_luis'), 'time_spent': 0.5})
