<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Acción de ventana -->
        <record id="scf_incidencias_especialista_action" model="ir.actions.act_window">
            <field name="name">Especialistas</field>
            <field name="res_model">scf_incidencias.especialista</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Registra tu primer especialista técnico
                </p>
            </field>
        </record>

        <!-- Vista Tree -->
        <record id="view_scf_incidencias_especialista_tree" model="ir.ui.view">
            <field name="name">scf_incidencias.especialista.tree</field>
            <field name="model">scf_incidencias.especialista</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="nivel"/>
                    <field name="certificaciones"/>
                </tree>
            </field>
        </record>

        <!-- Vista Form -->
        <record id="view_scf_incidencias_especialista_form" model="ir.ui.view">
            <field name="name">scf_incidencias.especialista.form</field>
            <field name="model">scf_incidencias.especialista</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="nivel"/>
                            </group>
                            <group>
                                <field name="certificaciones"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    </data>
</odoo>
