<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="scf_incidencias.etiquetas_search" model="ir.ui.view">
            <field name="name">scf.incidencias.etiquetas.search</field>
            <field name="model">scf_incidencias.etiquetas</field>
            <field name="arch" type="xml">
                <search string="Buscar Etiquetas">
                    <field name="name" />
                    <field name="description" />
                </search>
            </field>
        </record>

        <record id="scf_incidencias.etiquetas_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.etiquetas.tree</field>
            <field name="model">scf_incidencias.etiquetas</field>
            <field name="arch" type="xml">
                <tree string="Etiquetas"  sample="1">

                    <field name="name" decoration-bf="1" />

                    <field name="color" widget="color_picker" />

                    <field name="description" optional="show"
                        placeholder="Añade una descripción breve..." />
                </tree>
            </field>
        </record>

        <record id="scf_incidencias.etiquetas_form" model="ir.ui.view">
            <field name="name">scf.incidencias.etiquetas.form</field>
            <field name="model">scf_incidencias.etiquetas</field>
            <field name="arch" type="xml">
                <form string="Etiqueta">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nombre de Etiqueta" />
                            <h1>
                                <field name="name" placeholder="Ej: Urgente, Wifi, VIP..." />
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="color" widget="color_picker" />
                            </group>
                        </group>

                        <separator string="Detalles" />
                        <field name="description"
                            placeholder="Describe para qué sirve esta etiqueta (opcional)..." />
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>