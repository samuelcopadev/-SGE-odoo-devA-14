<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="scf_incidencias.etiquetas_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.etiquetas.tree</field>
            <field name="model">scf_incidencias.etiquetas</field>
            <field name="arch" type="xml">
                <tree string="Etiquetas" editable="bottom">
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="scf_incidencias.etiquetas_form" model="ir.ui.view">
            <field name="name">scf.incidencias.etiquetas.form</field>
            <field name="model">scf_incidencias.etiquetas</field>
            <field name="arch" type="xml">
                <form string="Etiqueta">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="color" widget="color_picker" class="text-center"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>