<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="scf_incidencias.activos_search" model="ir.ui.view">
            <field name="name">scf.incidencias.activos.search</field>
            <field name="model">scf_incidencias.activos</field>
            <field name="arch" type="xml">
                <search string="Buscar Activos">

                    <field name="name" />
                    <field name="serial_no" />
                    <field name="model" />

                    <!-- domain aplicado directamente desde la vista -->
                    <filter string="Ordenadores" name="category_pc"
                        domain="[('category', '=', 'pc')]" />
                    <filter string="Impresoras" name="category_printer"
                        domain="[('category', '=', 'printer')]" />
                    <filter string="Redes" name="category_network"
                        domain="[('category', '=', 'network')]" />

                    <!-- group_by mediante context  -->
                    <group expand="1" string="Agrupar Por">
                        <filter string="Categoría" name="group_category"
                            context="{'group_by':'category'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="scf_incidencias.activo_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.activos.tree</field>
            <field name="model">scf_incidencias.activos</field>
            <field name="arch" type="xml">
                <tree string="Activos" sample="1">

                    <!-- widget image en tree requiere tamaño explícito -->
                    <field name="image" widget="image" options="{'size': [25, 25]}" string=" " />

                    <!-- decoration-bf fuerza negrita -->
                    <field name="name" decoration-bf="1" />
                    <field name="model" optional="show" />
                    <field name="serial_no" optional="hide" />

                    <!-- badge + decoraciones condicionales -->
                    <field name="category"
                        widget="badge"
                        decoration-info="category == 'pc'"
                        decoration-success="category == 'printer'"
                        decoration-warning="category == 'network'" />

                    <field name="purchase_date" optional="hide" />
                </tree>
            </field>
        </record>

        <record id="scf_incidencias.activo_form" model="ir.ui.view">
            <field name="name">scf.incidencias.activos.form</field>
            <field name="model">scf_incidencias.activos</field>
            <field name="arch" type="xml">
                <form string="Activo">
                    <sheet>

                        <!-- clase oe_avatar aplica estilo estándar de imagen -->
                        <field name="image" widget="image" class="oe_avatar" />

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Nombre del Equipo" />
                            <h1>
                                <field name="name" />
                            </h1>
                            <h3 class="text-muted">
                                <field name="model" />
                            </h3>
                        </div>

                        <group>
                            <group string="Datos Técnicos">
                                <!-- radio horizontal mejora la selección de categorías -->
                                <field name="category" widget="radio" options="{'horizontal': true}" />
                                <field name="serial_no" />
                            </group>
                            <group string="Datos de Compra">
                                <field name="purchase_date" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Notas y Observaciones">
                                <!-- widget html permite texto enriquecido -->
                                <field name="notes" widget="html" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="scf_incidencias_activos_kanban" model="ir.ui.view">
            <field name="name">scf.incidencias.activos.kanban</field>
            <field name="model">scf_incidencias.activos</field>
            <field name="arch" type="xml">
                <kanban sample="1">

                    <!-- fields declarados para su uso en la plantilla -->
                    <field name="id" />
                    <field name="name" />
                    <field name="model" />
                    <field name="image" />
                    <field name="category" />
                    <field name="serial_no" />

                    <templates>
                        <t t-name="kanban-box">
                            <!-- oe_kanban_global_click hace toda la tarjeta clicable -->
                            <div class="oe_kanban_global_click d-flex flex-column p-2">

                                <div class="d-flex align-items-center mb-2">
                                    <div class="o_kanban_image me-2">
                                        <field name="image" widget="image" class="oe_avatar"
                                            options="{'size': [50, 50]}" />
                                    </div>
                                    <div class="overflow-hidden">
                                        <strong class="o_kanban_record_title d-block text-truncate">
                                            <field name="name" />
                                        </strong>
                                        <span class="text-muted small d-block">
                                            <field name="model" />
                                        </span>
                                    </div>
                                </div>

                                <div class="mt-auto">
                                    <!-- mismas decoraciones que en tree -->
                                    <field name="category"
                                        widget="badge"
                                        decoration-info="category == 'pc'"
                                        decoration-success="category == 'printer'"
                                        decoration-warning="category == 'network'" />

                                    <div class="text-muted small">
                                        SN: <field name="serial_no" />
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>
