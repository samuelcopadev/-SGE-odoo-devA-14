<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="scf_incidencias.issues_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.tree</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
               <tree string="Incidencia">
                    <field name="name"/>
                    <field name="activo_id"/>
                    <field name="priority"/>
                    <field name="date_reported"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="scf_incidencias.issues_form" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.form</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <form string="Incidencia">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="activo_id"/> 
                            <field name="description"/>
                            <field name="priority" widget="priority"/>
                            <field name="date_reported"/>
                            <field name="state"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record> 

      <record id="scf_incidencias_issues_kanban" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.kanban</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column" records_draggable="1">
                    
                    <field name="id"/>
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="activo_id"/>
                    <field name="activo_image"/> <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_card d-flex">
                                
                                <div class="o_kanban_image me-2">
                                    <field name="activo_image" widget="image" class="oe_avatar" options="{'size': [50, 50]}"/>
                                </div>

                                <div class="oe_kanban_details d-flex flex-column w-100">
                                    
                                    <strong class="o_kanban_record_title">
                                        <span><field name="name"/></span>
                                    </strong>
                                    
                                    <div class="text-muted small">
                                        <field name="activo_id"/>
                                    </div>

                                    <div class="o_kanban_record_bottom mt-auto">
                                        <div class="oe_kanban_bottom_left">
                                            <field name="priority" widget="priority"/>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>