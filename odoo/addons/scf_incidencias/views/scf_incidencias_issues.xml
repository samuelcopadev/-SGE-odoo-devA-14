<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="scf_incidencias.issues_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.tree</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
               <tree string="Incidencia">
                    <field name="name"/>
                    <field name="activo_id"/>
                    <field name="users_id" widget="many2one_avatar_user"/>
                    <field name="priority"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="date_reported"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

       <record id="scf_incidencias.issues_form" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.form</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <form string="Incidencia">
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Título de la incidencia..."/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="activo_id"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group>
                                <field name="users_id" widget="many2one_avatar_user"/>
                                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                <field name="date_reported"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Intervenciones / Horas">
                                <field name="intervencion_ids">
                                    <tree editable="bottom">
                                        <field name="date"/>
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                        <field name="name"/>
                                        <field name="time_spent" sum="Total Horas"/> </tree>
                                </field>
                            </page>

                            <page string="Descripción Detallada">
                                <field name="description"/>
                            </page>
                        </notebook>
                        </sheet>
                </form>
            </field>
        </record>

      <record id="scf_incidencias_issues_kanban" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.kanban</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
              <kanban default_group_by="state" class="o_kanban_small_column" records_draggable="1">
                <field name="id"/>
                <field name="name"/>
                <field name="priority"/>
                <field name="activo_id"/>
                <field name="activo_image"/> 
                <field name="users_id"/> 
                <field name="tag_ids"/> <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click oe_kanban_card d-flex">
                            
                            <div class="o_kanban_image me-2">
                                <field name="activo_image" widget="image" class="oe_avatar" options="{'size': [50, 50]}"/>
                            </div>

                            <div class="oe_kanban_details d-flex flex-column w-100">
                                <strong class="o_kanban_record_title">
                                    <span><field name="name"/></span>
                                </strong>
                                
                                <div class="text-muted small mb-1">
                                    <field name="activo_id"/>
                                </div>

                                <div class="o_kanban_tags_section">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                </div>
                                <div class="o_kanban_record_bottom mt-auto">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    
                                    <div class="oe_kanban_bottom_right">
                                        <field name="users_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
            </field>
        </record>
    </data>
</odoo>