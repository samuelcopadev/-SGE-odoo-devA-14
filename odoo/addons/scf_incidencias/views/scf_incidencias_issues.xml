<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="scf_incidencias.issues_tree" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.tree</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <tree string="Incidencia" decoration-muted="state == 'done'" sample="1">
                    
                    <field name="activo_image" widget="image" options="{'size': [25, 25]}" string=" " optional="show"/>

                    <field name="priority"
                        widget="badge"
                        decoration-danger="priority == '2'"
                        decoration-warning="priority == '1'"
                        decoration-success="priority == '0'"
                        class="text-uppercase fw-bold" />

                    <field name="name" string="Título" decoration-bf="1" />
                    <field name="activo_id" />
                    <field name="users_id" widget="many2one_avatar_user" optional="show" />
                    
                    <field name="total_hours"
                        widget="float_time"
                        sum="Total Global"
                        optional="show"
                        decoration-bf="1" />
                        
                    <field name="tag_ids"
                        widget="many2many_tags"
                        options="{'color_field': 'color'}"
                        optional="show" />

                    <field name="state"
                        widget="badge"
                        decoration-success="state == 'done'"
                        decoration-info="state == 'process'"
                        decoration-muted="state == 'draft'" />
                </tree>
            </field>
        </record>

        <record id="scf_incidencias.issues_form" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.form</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <form string="Incidencia">
                    <header>
                        <field name="state"
                            widget="statusbar"
                            options="{'clickable': '1'}"
                            statusbar_visible="draft,process,done" />
                    </header>

                    <sheet>
                        <field name="activo_image" widget="image" class="oe_avatar" />

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Título de la incidencia" />
                            <h1>
                                <field name="name" placeholder="Ej: Pantalla rota..." />
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="activo_id" />
                                <field name="priority" widget="priority" />
                            </group>
                            <group>
                                <field name="users_id" widget="many2one_avatar_user" />
                                <field name="tag_ids"
                                    widget="many2many_tags"
                                    options="{'color_field': 'color'}" />
                                <field name="date_reported" />

                                <field name="total_hours"
                                    widget="float_time"
                                    decoration-danger="total_hours > 10"
                                    decoration-bf="1"
                                    readonly="1" />
                            </group>
                        </group>

                        <notebook>
                            <page string="Intervenciones / Horas">
                                <field name="intervencion_ids">
                                    <tree editable="bottom"
                                        decoration-muted="time_spent == 0">
                                        <field name="date" />
                                        <field name="user_id" widget="many2one_avatar_user" />
                                        <field name="name" />
                                        <field name="time_spent"
                                            widget="float_time"
                                            sum="Total Visual"
                                            decoration-bf="1" />
                                    </tree>
                                </field>
                            </page>

                            <page string="Descripción Detallada">
                                <field name="description"
                                    placeholder="Describe aquí todos los detalles técnicos..." />
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="scf_incidencias_issues_kanban" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.kanban</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" records_draggable="1" sample="1">
                    <field name="id" />
                    <field name="name" />
                    <field name="priority" />
                    <field name="activo_id" />
                    <field name="activo_image" />
                    <field name="users_id" />
                    <field name="tag_ids" />
                    <field name="total_hours" />

                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click d-flex flex-column p-2">

                                <div class="d-flex mb-2">
                                    <div class="o_kanban_image me-2 flex-shrink-0">
                                        <field name="activo_image" widget="image" options="{'size': [45, 45]}" class="oe_avatar"/>
                                    </div>

                                    <div class="flex-grow-1">
                                        <strong class="o_kanban_record_title d-block">
                                            <field name="name" />
                                        </strong>
                                        <span class="text-muted small d-block">
                                            <field name="activo_id" />
                                        </span>
                                    </div>
                                </div>

                                <div class="w-100 mb-2">
                                    <field name="tag_ids"
                                        widget="many2many_tags"
                                        options="{'color_field': 'color'}" />
                                </div>

                                <div
                                    class="d-flex justify-content-between align-items-center mt-auto pt-2 border-top">
                                    <field name="priority" widget="priority" />
                                    <field name="total_hours" widget="float_time" />
                                    <field name="users_id" widget="many2one_avatar_user" />
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="scf_incidencias.issues_calendar" model="ir.ui.view">
            <field name="name">scf.incidencias.issues.calendar</field>
            <field name="model">scf_incidencias.issues</field>
            <field name="arch" type="xml">
                <calendar string="Calendario de Incidencias" date_start="date_reported" color="users_id" mode="month">
                    <field name="name"/>
                    <field name="users_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

    </data>
</odoo>