<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="report_intervenciones_table">
            <h4>Intervenciones Realizadas</h4>
            <table class="table table-sm table-striped mt-3">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Técnico</th>
                        <th>Descripción</th>
                        <th class="text-end">Horas</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="doc.intervencion_ids" t-as="line">
                        <td><span t-field="line.date" t-options='{"widget": "date"}'/></td>
                        <td><span t-field="line.user_id"/></td>
                        <td><span t-field="line.name"/></td>
                        <td class="text-end">
                            <span t-field="line.time_spent" t-options='{"widget": "float_time"}'/>
                        </td>
                    </tr>
                </tbody>
            </table>
        </template>

        <template id="report_incidencia_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            <div class="row mb-4">
                                <div class="col-8">
                                    <h2>Informe de Incidencia</h2>
                                    <h3><span t-field="doc.name"/></h3>
                                    <p>
                                        <strong>Prioridad:</strong> <span t-field="doc.priority"/><br/>
                                        <strong>Estado:</strong> <span t-field="doc.state"/><br/>
                                        <strong>Fecha Reporte:</strong> <span t-field="doc.date_reported"/>
                                    </p>
                                </div>
                                <div class="col-4 text-end">
                                    <div t-if="doc.activo_image">
                                        <img t-att-src="image_data_uri(doc.activo_image)" 
                                             style="max-height: 120px; border: 1px solid #ccc; padding: 5px;"/>
                                    </div>
                                </div>
                            </div>

                            <t t-call="scf_incidencias.report_intervenciones_table"/>

                            <div class="row justify-content-end mt-3">
                                <div class="col-4 text-end border-top pt-2">
                                    <strong>Total Horas: </strong>
                                    <span t-field="doc.total_hours" t-options='{"widget": "float_time"}'/>
                                </div>
                            </div>

                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>