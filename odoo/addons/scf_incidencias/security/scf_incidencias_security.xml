<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_scf_incidencias" model="ir.module.category">
            <field name="name">Gestión de Incidencias</field>
            <field name="description">Niveles de acceso para técnicos y responsables.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_incidencias_user" model="res.groups">
            <field name="name">Técnico (Usuario)</field>
            <field name="category_id" ref="module_category_scf_incidencias"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_incidencias_manager" model="res.groups">
            <field name="name">Responsable (Manager)</field>
            <field name="category_id" ref="module_category_scf_incidencias"/>
            <field name="implied_ids" eval="[(4, ref('group_incidencias_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>